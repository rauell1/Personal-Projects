#Find the largest of three numbers
while True:
    print("\nFind the largest of the three numbers")
    number1 = int(input("\nEnter the first number: "))
    number2 = int(input("Enter the second number: "))
    number3 = int(input("Enter the third number: "))

#If-else conditions

    if number1 >= number2 and number1 >= number3:
        larger_number = number1
        print("The largest number is ", larger_number)

    elif number2 >= number1 and number2 >= number3:
         larger_number = number2
         print("The largest number is ", larger_number)

    else: 
         larger_number = number3
         print("\nThe largest number is ", larger_number)

    user_input = input("Would you want to find the largest number again? Yes or No: ")

    if user_input != "Yes":
        print("Goodbye!")

    break

